<% content_for :title, @objective.title %>

<%= render partial: 'subnav' %>

<div class="flex flex-wrap mx-auto max-w-screen-xl">

  <div class="mt-5 mx-5 flex-1 lg:w-0 w-full">

    <section class="bg-white rounded shadow pb-1 mb-6">

      <div class="px-5 pt-4 pb-3 border-b border-gray-300">
        <h2 class="text-xl text-brand-navy leading-tight">
          Brief
        </h2>
      </div>

      <%- if @objective.context.present? %>
        <div class="px-5 my-5">
          <h3 class="text-lg text-brand-navy leading-tight mb-2">Why the work is being done</h3>
          <%= @objective.context %>
        </div>
      <% end %>

      <div class="px-5 my-5">
        <h3 class="text-lg text-brand-navy leading-tight mb-2">Objective</h3>
        <%= @objective.objective   %>
      </div>

      <div class="px-5 my-5">
        <h3 class="text-lg text-brand-navy leading-tight mb-2">Indicators</h3>
        <p>How we know we're on track</p>
        <%= link_to "Add indicator", new_objective_indicator_path(@objective) %>

        <% if @objective.indicators.any? %>
          <section class="bg-white rounded shadow mb-6">
            <div class="flex justify-between px-5 pt-4 pb-3">
              <p class="w-3/12 mr-4 font-lexenddeca text-brand-navy leading-tight">Last progress update</p>
              <p class="w-5/12 mr-4 font-lexenddeca text-brand-navy leading-tight">Progress indicator</p>
              <p class="w-2/12 mr-4 font-lexenddeca text-brand-navy leading-tight">Start date</p>
              <p class="w-2/12 font-lexenddeca text-brand-navy leading-tight">End date</p>
            </div>

            <%- @objective.indicators.each do |indicator| %>
              <%# TODO: responsive %>
              <%= link_to targetable_indicator_path(@objective, indicator) do %>
                <div class="flex justify-between px-5 py-2 border-t border-gray-300 hover:bg-gray-100">
                  <div class="w-3/12 mr-4">
                    <% if indicator.requires_update? %>
                      <div class="px-2 py-1 mb-2 bg-orange-100 text-xs text-orange-800 rounded">
                        Progress update due this <%= indicator.update_frequency.slice(0..-3) %>
                      </div>
                    <% end %>

                    <% if indicator.last_progress_update_status %>
                      <p>
                        <strong class="font-bold <%= indicator.last_update_status %>_with_icon"><%= indicator.last_update_status&.humanize %></strong>
                        <small class="text-xs text-gray-700">
                          <%= indicator.last_update_date.strftime("%e %b %Y") %>
                        </small>
                      </p>

                      <% if indicator.last_update_value %>
                        <div class="my-2">
                          <p class="text-xs mb-1">
                            <%= number_with_precision(indicator.last_update_value, precision: 2, delimiter: ',', strip_insignificant_zeros: true) %>
                            /
                            <%= number_with_precision(indicator.target_value, precision: 2, delimiter: ',', strip_insignificant_zeros: true) %>
                            <%= indicator.unit %>
                          </p>
                          <div class="relative rounded-full overflow-hidden w-full h-3">
                            <div class="absolute bg-gray-200 w-full h-3"></div>
                            <div class="absolute h-3 bg-opacity-50 bg_<%= indicator.last_progress_update_status %>" style="width: <%= indicator.progress %>%"></div>
                          </div>
                        </div>
                      <% end %>
                    <% else %>
                      <div class="text-gray-700 italic text-sm">
                        No updates
                      </div>
                    <% end %>
                  </div>


                  <div class="w-5/12 text-sm mr-4">
                    <div class="text-xs text-gray-700">
                      <%= indicator.status.humanize %>
                    </div>
                    <%= indicator.title %>
                  </div >

                  <div class="w-2/12 text-sm mr-4">
                    <%= indicator.start_date.strftime("%e %b %Y") %>
                  </div>

                  <div class="w-2/12 text-sm">
                    <%= with_default indicator.end_date&.strftime("%e %b %Y") %>
                  </div>
                </div>
              <% end %>

            <% end %>
          </section>
        <% end %>
      </div>

      <%- if @objective.expectations.present? %>
        <div class="px-5 my-5">
          <h3 class="text-lg text-brand-navy leading-tight mb-2">Boundaries & Expectations</h3>
          <%= @objective.expectations %>
        </div>
      <% end %>
    </section>
  </div>

  <aside class="m-5 lg:w-64 w-full">

    <section class="py-5 border-t-2 border-b-2 border-gray-300">
      <h2 class="text-xl text-brand-navy mb-2 leading-tight">Sponsor</h2>
      <h2 class="text-xl text-brand-navy mb-2 leading-tight">Team lead</h2>
    </section>

    <section class="py-5 border-b-2 border-gray-300">
      <h2 class="text-xl text-brand-navy mb-2 leading-tight">Start date - End date</h2>
      <%= @objective.start_date %> - <%= @objective.end_date %>
    </section>

    <section class="py-5 border-b-2 border-gray-300">
      <h2 class="text-xl text-brand-navy mb-2 leading-tight">Contributing to goals</h2>
      <ul>
        <%- @objective.goals.each do |g| %>
          <li><%= link_to g.title, g %></li>
        <% end %>
      </ul>
    </section>
  </aside>

</div>




<div class="m-5">
  <section class="mb-6">
    <h2 class="text-xl">Team</h2>
  </section>
</div>
