<div class="mb-8">
  <div class="text-gray-700 mb-6">
    <%= page_entries_info people %>
  </div>

  <%- people.each do |person| %>

    <div class="rounded bg-white shadow mb-5">
      <div class="px-4 py-3">
        <h2 class="text-blue-800 leading-tight mb-1">
          <%= link_to person.name, person, class: 'hover:underline' %>
        </h2>
        <p class="text-sm text-gray-700">
          <%= pluralize(person.contacts.size, 'contact') %>
          <% if person.organisations.size > 0 %>
            &middot;
            <%= to_sentence(person.organisations.map{ |o| link_to(o.name, organisation_path(o), class: 'link')}) %>
          <% end %>
        </p>
      </div>
    </div>

  <% end %>
</div>

<%= paginate people %>
