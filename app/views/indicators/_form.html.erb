<%= simple_form_for model, url: url do |f| %>
  <div class="mb-4">
    <%= f.input :status, as: :radio_buttons, collection: Indicator.statuses.keys, label_method: lambda {|k| k.humanize}, item_wrapper_class: 'inline-block mr-6' %>
  </div>

  <div class="mb-4">
    <%= f.input :title %>
  </div>

  <div class="flex justify-between mb-4 ">
    <div class="w-full mr-2">
      <%= f.input :target_value %>
    </div>
    <div class="w-full ml-2">
      <%= f.input :unit %>
    </div>
  </div>

  <div class="flex justify-between mb-6 ">
    <div class="w-full mr-2">
      <%= f.input :start_date, html5: true, placeholder: 'dd mmm yyyy', input_html: { value: model.start_date || Date.today } %>
    </div>
    <div class="w-full ml-2">
      <%= f.input :end_date, html5: true, placeholder: 'dd mmm yyyy' %>
    </div>
  </div>

  <div class="mb-4">
    <%= f.input :update_frequency, as: :radio_buttons, collection: Indicator.update_frequencies.keys, label_method: lambda {|k| k.humanize}, item_wrapper_class: 'inline-block mr-6' %>
  </div>

  <%- if ['new', 'create'].include?(action_name) %>
    <%= f.button :submit, 'Create', data: { disable_with: 'Creating...' }, class: 'btn bg-brand-navy text-white' %>
    <%= link_to 'Cancel', targetable_indicators_path(@targetable), class: 'link ml-6' %>
  <% end %>

  <%- if ['edit', 'update'].include?(action_name) %>
    <%= f.button :submit, 'Update', data: { disable_with: 'Updating...' }, class: 'btn bg-brand-navy text-white' %>
    <%= link_to 'Cancel', targetable_indicator_path(@targetable, model), class: 'link ml-6' %>
    <%= link_to 'Delete', targetable_indicator_path(@targetable, model), method: 'delete', class: 'link float-right', data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>
