<div class="mb-8">
  <div class="text-gray-700 mb-6">
    <%= page_entries_info goals %>
  </div>

  <%- goals.each do |goal| %>

    <div class="rounded bg-white shadow mb-5">
      <div class="px-4 py-3">
        <h2 class="text-brand-navy leading-tight mb-2">
          <%= link_to goal.title, goal, class: 'hover:underline' %>
        </h2>
      </div>
    </div>

  <% end %>
</div>

<%= paginate goals %>
